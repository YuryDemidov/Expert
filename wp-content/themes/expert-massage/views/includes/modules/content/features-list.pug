section.features-list(class=(pageData.featuresBlock.blockNumber ? `features-list_${pageData.featuresBlock.blockNumber}` : false))
  .container
    .features-list__content
      h2.heading!= pageData.featuresBlock.heading
      ul.features-list__list
        each feature, i in pageData.featuresBlock.features
          - var itemClass = 'features-list__item'
          - var aosDelay = `${150 * i}`
          li.features-list__item(
            class=(i === 0 ? `${itemClass}_one` : (i === 1 ? `${itemClass}_two` : `${itemClass}_three`))
            data-aos='fade-left'
            data-aos-delay=aosDelay
          )
            .features-list__image
            h3.features-list__feature-title!= feature.title
            p.features-list__feature-description!= feature.text
      if pageData.theme === 'main'
        a.features-list__link.link.link_arrow.link_primary.underline(href=pageData.featuresBlock.link.url)!= pageData.featuresBlock.link.text
