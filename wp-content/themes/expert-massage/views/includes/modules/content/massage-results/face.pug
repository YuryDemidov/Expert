- var faceResults = pageData.massageResults.face

mixin face-slide(number)
  .face-results__slide(class=(number === 1 ? 'face-results__slide_main' : `face-results__slide_${number}`))
    case number
      when 1
        -
          var photo1 = {
            desktop: {
              webp: {
                '1x': `${THEME_IMG_PATH}/results/face-results-1-1_desktop@1x.webp`,
                '2x': `${THEME_IMG_PATH}/results/face-results-1-1_desktop@2x.webp`
              },
              png: {
                '1x': `${THEME_IMG_PATH}/results/face-results-1-1_desktop@1x.png`,
                '2x': `${THEME_IMG_PATH}/results/face-results-1-1_desktop@2x.png`
              }
            },
            tablet: false,
            mobile: {
              webp: {
                '1x': `${THEME_IMG_PATH}/results/face-results-1-1_mobile@1x.webp`,
                '2x': `${THEME_IMG_PATH}/results/face-results-1-1_mobile@2x.webp`,
                '3x': `${THEME_IMG_PATH}/results/face-results-1-1_mobile@3x.webp`
              },
              png: {
                '1x': `${THEME_IMG_PATH}/results/face-results-1-1_mobile@1x.png`,
                '2x': `${THEME_IMG_PATH}/results/face-results-1-1_mobile@2x.png`,
                '3x': `${THEME_IMG_PATH}/results/face-results-1-1_mobile@3x.png`
              }
            }
          }
          var photo2 = {
            desktop: {
              webp: {
                '1x': `${THEME_IMG_PATH}/results/face-results-1-2_desktop@1x.webp`,
                '2x': `${THEME_IMG_PATH}/results/face-results-1-2_desktop@2x.webp`
              },
              png: {
                '1x': `${THEME_IMG_PATH}/results/face-results-1-2_desktop@1x.png`,
                '2x': `${THEME_IMG_PATH}/results/face-results-1-2_desktop@2x.png`
              }
            },
            tablet: false,
            mobile: {
              webp: {
                '1x': `${THEME_IMG_PATH}/results/face-results-1-2_mobile@1x.webp`,
                '2x': `${THEME_IMG_PATH}/results/face-results-1-2_mobile@2x.webp`,
                '3x': `${THEME_IMG_PATH}/results/face-results-1-2_mobile@3x.webp`
              },
              png: {
                '1x': `${THEME_IMG_PATH}/results/face-results-1-2_mobile@1x.png`,
                '2x': `${THEME_IMG_PATH}/results/face-results-1-2_mobile@2x.png`,
                '3x': `${THEME_IMG_PATH}/results/face-results-1-2_mobile@3x.png`
              }
            }
          }
        h3.massage-results__slide-title
          | Курс
          |
          if pageData.theme === '1'
            span скульптурно-буккального массажа
          else
            a.link.massage-results__massage-link(href='/sculptural-buccal-massage/') скульптурно-буккального массажа
        .massage-results__photos
          .massage-results__before
            h4.massage-results__label.hidden_desktop До
            +picture-tag(photo1, photo1.mobile.png['3x'], 'До курса массажа лица').massage-results__photo.massage-results__photo_before
          .massage-results__after
            h4.massage-results__label.hidden_desktop После
            +picture-tag(photo2, photo2.mobile.png['3x'], 'Результат после курса массажа лица').massage-results__photo.massage-results__photo_after
        .face-results__presentation
          +picture-tag(photo2, photo2.mobile.png['3x'], 'Результат после курса массажа лица', 210, 227).hidden_desktop
          .face-results__description.face-results__description_one
            | Взгляд “распахивается” после первой же процедуры
          .face-results__description.face-results__description_two
            | Такие морщинки сложны в коррекции, но за курс они уходят почти полностью
          .face-results__description.face-results__description_three
            | Носогубки и так были в неплохом состоянии, но теперь совсем не видны
          .face-results__description.face-results__description_four
            | Врач всегда тщательно прорабатывает шею и овал лица, так как они выдают возраст
          .face-results__description.face-results__description_five.hidden_mobile-tablet
            | Часть физиологических особенностей не убрать массажем, но они и не портят внешность
        .massage-results__link
          if pageData.theme === '1'
            button.button.button_primary(type='button' data-open-popup='appointment' data-massage-id=pageData.theme) Записаться
          else
            a(href='/sculptural-buccal-massage/').button.button_primary Читать о процедуре
      default
        -
          var photoFaceResult = {
            desktop: {
              webp: {
                '1x': `${THEME_IMG_PATH}/results/face-results-${number}_desktop@1x.webp`,
                '2x': `${THEME_IMG_PATH}/results/face-results-${number}_desktop@2x.webp`
              },
              jpg: {
                '1x': `${THEME_IMG_PATH}/results/face-results-${number}_desktop@1x.jpg`,
                '2x': `${THEME_IMG_PATH}/results/face-results-${number}_desktop@2x.jpg`
              }
            },
            tablet: false,
            mobile: {
              webp: {
                '1x': `${THEME_IMG_PATH}/results/face-results-${number}_mobile@1x.webp`,
                '2x': `${THEME_IMG_PATH}/results/face-results-${number}_mobile@2x.webp`,
                '3x': `${THEME_IMG_PATH}/results/face-results-${number}_mobile@3x.webp`
              },
              jpg: {
                '1x': `${THEME_IMG_PATH}/results/face-results-${number}_mobile@1x.jpg`,
                '2x': `${THEME_IMG_PATH}/results/face-results-${number}_mobile@2x.jpg`,
                '3x': `${THEME_IMG_PATH}/results/face-results-${number}_mobile@3x.jpg`
              }
            }
          }
        - var titleEnd = 'скульптурно-буккального массажа'
        - var slideClass = 'massage-results__simple-slide_1'
        - var link = '/sculptural-buccal-massage/'
        - var linkGoalTheme = '1'
        if (number === 5) || (number === 6)
          - titleEnd = 'массажа Асахи-Зоган'
          - slideClass = 'massage-results__simple-slide_4'
          - link = '/japanese-asahi-massage/'
          - linkGoalTheme = '4'
        if (number === 7) || (number === 8)
          - titleEnd = 'хиромассажа'
          - slideClass = 'massage-results__simple-slide_5'
          - link = '/chiromassage/'
          - linkGoalTheme = '5'
        h3.massage-results__slide-title
          | Курс
          |
          if pageData.theme === linkGoalTheme
            span= titleEnd
          else
            a.link.massage-results__massage-link(class=`massage-results__massage-link_${linkGoalTheme}` href=link)= titleEnd
        .massage-results__labels
          h4.massage-results__label.hidden_desktop До
          h4.massage-results__label.hidden_desktop После
        .massage-results__simple-slide(class=slideClass)
          +picture-tag(photoFaceResult, photoFaceResult.mobile.jpg['3x'], 'До и после курса массажа').massage-results__single-image
        .massage-results__link
          button.button.button_primary(type='button' data-open-popup='appointment' data-massage-id=linkGoalTheme) Записаться

if faceResults
  section#faceResults.massage-results__section.face-results
    .face-results__slider.slider(data-state='presentation')
      button.slider__button.slider__button_prev(aria-label="Предыдущий слайд")
      ul.face-results__slides
        each slideNumber in faceResults.slidesOrder
          li.face-results__slide-wrap
            +face-slide(slideNumber)
      button.slider__button.slider__button_next(aria-label="Следующий слайд")
