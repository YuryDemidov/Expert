        '2x': `${THEME_IMG_PATH}/logo/desktop-logo_${pageData.theme}@2x.webp`
      },
      png: {
        '1x': `${THEME_IMG_PATH}/logo/desktop-logo_${pageData.theme}@1x.png`,
        '2x': `${THEME_IMG_PATH}/logo/desktop-logo_${pageData.theme}@2x.png`
      }
    },
    tablet: {
      webp: {
        '1x': `${THEME_IMG_PATH}/logo/tablet-logo_${pageData.theme}@1x.webp`,
        '2x': `${THEME_IMG_PATH}/logo/tablet-logo_${pageData.theme}@2x.webp`
      },
      png: {
        '1x': `${THEME_IMG_PATH}/logo/tablet-logo_${pageData.theme}@1x.png`,
        '2x': `${THEME_IMG_PATH}/logo/tablet-logo_${pageData.theme}@2x.png`
      }
    },
    mobile: {
      webp: {
        '1x': `${THEME_IMG_PATH}/logo/mobile-logo_${pageData.theme}@1x.webp`,
        '2x': `${THEME_IMG_PATH}/logo/mobile-logo_${pageData.theme}@2x.webp`,
        '3x': `${THEME_IMG_PATH}/logo/mobile-logo_${pageData.theme}@3x.webp`
