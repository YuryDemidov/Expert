//- IMPORTANT! Global object 'locals' is used for possibility to apply variables outside includes scope
- locals.data = {}

include ../utils/mixins
include ../utils/functions
include ../utils/global-data

block variables

-
  locals.data.globalData.company.logoImages = {
    desktop: {
      webp: {
        '1x': `${THEME_IMG_PATH}/logo/desktop-logo_${locals.data.pageData.theme}@1x.webp`,
        '2x': `${THEME_IMG_PATH}/logo/desktop-logo_${locals.data.pageData.theme}@2x.webp`
      },
      png: {
        '1x': `${THEME_IMG_PATH}/logo/desktop-logo_${locals.data.pageData.theme}@1x.png`,
        '2x': `${THEME_IMG_PATH}/logo/desktop-logo_${locals.data.pageData.theme}@2x.png`
      }
    },
    tablet: {
      webp: {
        '1x': `${THEME_IMG_PATH}/logo/tablet-logo_${locals.data.pageData.theme}@1x.webp`,
        '2x': `${THEME_IMG_PATH}/logo/tablet-logo_${locals.data.pageData.theme}@2x.webp`
      },
      png: {
        '1x': `${THEME_IMG_PATH}/logo/tablet-logo_${locals.data.pageData.theme}@1x.png`,
        '2x': `${THEME_IMG_PATH}/logo/tablet-logo_${locals.data.pageData.theme}@2x.png`
      }
    },
    mobile: {
      webp: {
        '1x': `${THEME_IMG_PATH}/logo/mobile-logo_${locals.data.pageData.theme}@1x.webp`,
        '2x': `${THEME_IMG_PATH}/logo/mobile-logo_${locals.data.pageData.theme}@2x.webp`,
        '3x': `${THEME_IMG_PATH}/logo/mobile-logo_${locals.data.pageData.theme}@3x.webp`
      },
      png: {
        '1x': `${THEME_IMG_PATH}/logo/mobile-logo_${locals.data.pageData.theme}@1x.png`,
        '2x': `${THEME_IMG_PATH}/logo/mobile-logo_${locals.data.pageData.theme}@2x.png`,
        '3x': `${THEME_IMG_PATH}/logo/mobile-logo_${locals.data.pageData.theme}@3x.png`
      }
    }
  }

doctype html
html(lang='ru')
  head
    include ../includes/modules/head/head
    block head

  body.page(class=`${(locals.data.pageData.pageClass ? locals.data.pageData.pageClass : '')} ${(locals.data.pageData.theme ? `theme-${locals.data.pageData.theme}` : '')}`)
    include ../includes/modules/svg-sprite/svg-sprite
    .page__wrapper
      .page__header
        include ../includes/modules/header/header
      main.page__content
        block content
      .page__footer
        include ../includes/modules/footer/footer
      include ../includes/modules/content/fixed-buttons
      include ../includes/popups/popups-wrap
    - wp_footer()

    block script
