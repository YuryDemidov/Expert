-
  var footerLogo = {
    desktop: false,
    tablet: false,
    mobile: {
      webp: {
        '1x': 'assets/img/logo/logo_gray@1x.webp',
        '2x': 'assets/img/logo/logo_gray@2x.webp',
        '3x': 'assets/img/logo/logo_gray@3x.webp'
      },
      jpg: {
        '1x': 'assets/img/logo/logo_gray@1x.jpg',
        '2x': 'assets/img/logo/logo_gray@2x.jpg',
        '3x': 'assets/img/logo/logo_gray@3x.jpg'
      }
    }
