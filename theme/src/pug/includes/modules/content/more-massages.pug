- var title = 'Другие массажи для'
if locals.data.pageData.theme <= 5
  - title = `${title} лица`
else if (locals.data.pageData.theme >= 7) && (locals.data.pageData.theme <= 9)
  - title = `${title} стройной фигуры и здоровья`
else
  - title = `${title} здоровья тела`

mixin massage-preview(id)
  li.more-massages__slider-item
    - var massageInfo
    - var isHighlighted = false
    each massage in locals.data.globalData.massages
      if massage.id === id
        - massageInfo = massage
      if id === 1
        - isHighlighted = true
      if (id === 6) && (locals.data.pageData.theme === '12')
        - isHighlighted = true
      if (id === 7) && ((locals.data.pageData.theme === '8') || (locals.data.pageData.theme === '9'))
        - isHighlighted = true
      if (id === 9) && (locals.data.pageData.theme === '7')
        - isHighlighted = true
      if (id === 12) && ((locals.data.pageData.theme === '6') || (locals.data.pageData.theme === '10') || (locals.data.pageData.theme === '11'))
        - isHighlighted = true
    .more-massages__card.massage-card(class={'more-massages__card_highlighted': isHighlighted})
      if id === 1
        .more-massages__sticker
          .more-massages__sticker-text Хит
          +svg-icon('#polystar').more-massages__sticker-bg(width='105' height='105')
      .massage-card__image(class=`massage-card__image_theme-${id}`)
      .massage-card__content
        - var title = massageInfo.name
        if id === 4
          - title = 'Асахи-Зоган'
        if id === 7
          - title = 'Ручное моделирование'
        h3.massage-card__title= title
        p.massage-card__text!= massageInfo.shortDescription
        a(href=massageInfo.url).massage-card__link.link.link_primary.link_arrow Смотреть

section.more-massages
  .container
    .more-massages__content
      h2.more-massages__title.heading= title
      .slider
        button.slider__button.slider__button_prev(aria-label='Предыдущий отзыв')
        ul.more-massages__list.more-massages__slider
          each massageId in locals.data.pageData.moreMassages
            +massage-preview(massageId)
        button.slider__button.slider__button_next(aria-label='Следующий отзыв')
